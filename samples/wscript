import sys

def build(bld):

    if bld.env.CXX_NAME == 'msvc':
        my_cxxflags = [ '/O2', '/EHsc' ]
        my_linkflags = []
    else:
        my_cxxflags = [ '-Wall', '-O3', '-g' ]
        my_linkflags = [ '-s' ]

    if sys.platform != 'win32':
        my_linkflags.append('-lrt')

    bld.program(
        source = [ 'mem_alloc.cpp' ],
        includes = [ '../include' ],
        target = 'mem_alloc',
        cxxflags = my_cxxflags,
        linkflags = my_linkflags,
        )

