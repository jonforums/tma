import sys

def build(bld):

    lflags = [ '-s' ]
    if not hasattr(sys, 'winver'):
        lflags.append('-lrt')

    bld.program(
        source = [ 'mem_alloc.cpp' ],
        includes = [ '../include' ],
        target = 'mem_alloc',
        cxxflags = [ '-Wall', '-O3', '-g' ],
        linkflags = lflags,
        )

